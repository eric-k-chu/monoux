{
  "extends": "@monoux/typescript-config/base.json",
  "include": ["src", ".eslintrc.cjs"],
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "noEmit": false,
    "rootDir": "./src",
    "paths": {
      "@monoux/common": ["../common/src"]
    }
  },
  "exclude": ["dist", "build", "node_modules"],
  "references": [{ "path": "../common" }]
}
