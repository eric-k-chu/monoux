{
  "extends": "@monoux/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@monoux/ui": ["../../packages/ui/src"],
      "@monoux/common": ["../../packages/common/src"]
    },
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../../packages/ui/"
    },
    {
      "path": "../../packages/common/"
    }
  ]
}
