{
  "name": "monoux",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "add:package": "pnpm --filter @monoux/scripts add:package",
    "add:app": "pnpm --filter @monoux/scripts add:app"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "turbo": "^2.0.14"
  },
  "packageManager": "pnpm@9.8.0",
  "engines": {
    "node": ">=20"
  }
}
