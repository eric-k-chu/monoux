{
  "name": "monoux",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "add:package": "pnpm --filter @monoux/gen add:package",
    "add:app": "pnpm --filter @monoux/gen add:app",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "syncpack": "^13.0.0",
    "turbo": "^2.1.1"
  },
  "packageManager": "pnpm@9.9.0",
  "engines": {
    "node": ">=20"
  }
}
